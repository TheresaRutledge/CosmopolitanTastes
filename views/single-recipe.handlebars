{{#with recipe}}
<div class='container' style="color: #D79922; font-size: large;">
  <article class='recipe'>
    <h2 class="mx-auto">{{title}}</h2>
    <p class="card-text">From: {{user.username}}</p>
    <p class="card-text">Votes: {{vote_count}}</p>
    <img src="/photos/{{picture}}" class="img-fluid" alt="Recipe Image">
    <h3>Ingredients:</h3>
    <ul>
      {{#each ingredients as |ingredient|}}
      <li>{{ingredient}}</li>
      {{/each}}
    </ul>
    <h3>Directions:</h3>
    <p>{{instructions}}
    </p>
    <button id="upvote" class="btn"  style="background-color: #F13C20; color: #EFE2BA">Upvote</button>
  </article>
</div>
{{/with}}

<script src='/js/upvote.js'></script>